---
import Button from '../components/Button.astro';
import '../styles/styles.css';
import Leaderboards from '../components/Leaderboards.astro';
---

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard - Math Arena</title>
</head>

<Leaderboards server:defer>
    <Leaderboards slot="fallback" />
</Leaderboards>

<Button
 id="backButton"
 size="lg"
 backgroundColor="#4ea7f5"
 textColor="white"
 borderColor="transparent"
 href="/"
>
 Back
</Button>


<script>

document.addEventListener('DOMContentLoaded', () => {

const savedTheme = localStorage.getItem("selectedTheme");
if (savedTheme) {
    document.body.style.backgroundImage = `url('/background.svg?color=${savedTheme.slice(1)}')`;
}

});
</script>