---
import MathPage from "../layouts/MathPage.astro";
import Button from "../components/Button.astro";
---

<MathPage title="Math Arena">
  <h1 id="title">Math Arena</h1>

  <div class="gameSelectButtons">
    <Button
      size="lg"
      backgroundColor="#4ea7f5"
      textColor="white"
      borderColor="transparent"
      href="/add"
    >
      Add/Sub
    </Button>

    <Button
      size="lg"
      backgroundColor="#4ea7f5"
      textColor="white"
      borderColor="transparent"
      href="/mult"
    >
      Multiplication
    </Button>

    <Button
      size="lg"
      backgroundColor="#4ea7f5"
      textColor="white"
      borderColor="transparent"
      href="/div"
    >
      Division
    </Button>
  </div>

  <style>
    #title {
      text-align: center;
      font-size: 4rem;
      color: #3399ff;
    }
  </style>
</MathPage>
