---
export const prerender = false;

import "../styles/styles.css";
import Button from "../components/Button.astro";
import SideMenu from "../components/SideMenu.astro";
import { getAuth } from "firebase-admin/auth";
import { app } from "../lib/firebase_server.ts";
import ScoreBox from "../components/ScoreBox.astro";

// Check for server-side authentication
let isAuthenticated = false;
const auth = getAuth(app);

if (Astro.cookies.has("__session")) {
  const sessionCookie = Astro.cookies.get("__session")?.value;
  if (sessionCookie) {
    try {
      const decodedCookie = await auth.verifySessionCookie(sessionCookie);
      isAuthenticated = true;
    } catch (error) {
      // Invalid session cookie
      console.error("Session verification error:", error);
    }
  }
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Math Arena</title>
    <style>
      /* Styling for sign-in button */
      #auth-container {
        position: absolute;
        top: 10px;
        right: 10px;
      }
      #sign-in-button {
        background-color: #4ea7f5;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
      }
      #side-menu-container.hidden {
        display: none;
      }
      .achievements-container {
        position: fixed;
        bottom: 200px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        padding: 20px;
      }
      .achievements-container :global(.button-base) {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }
      .achievements-container :global(.button-base:hover) {
        transform: translateY(-2px);
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
      }
      #title {
        text-align: center;
        margin: 20px 0;
      }
      .gameSelectButtons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 2rem 0;
      }
    </style>
  </head>
  <body>
    <h1 id="title">Math Arena</h1>

    <div id="auth-container">
      {
        !isAuthenticated ? (
          <a href="/login" id="sign-in-button">
            <button>Sign In</button>
          </a>
        ) : null
      }

      <div id="side-menu-container" class={isAuthenticated ? "" : "hidden"}>
        {isAuthenticated ? <SideMenu /> : null}
      </div>
    </div>

    <div class="gameSelectButtons">
      <Button
        size="lg"
        backgroundColor="#4ea7f5"
        textColor="white"
        borderColor="transparent"
        href="/add"
      >
        Add/Sub
      </Button>

      <Button
        size="lg"
        backgroundColor="#4ea7f5"
        textColor="white"
        borderColor="transparent"
        href="/mult"
      >
        Multiplication
      </Button>

      <Button
        size="lg"
        backgroundColor="#4ea7f5"
        textColor="white"
        borderColor="transparent"
        href="/div"
      >
        Division
      </Button>
    </div>

    <div class="achievements-container">
      <Button
        size="lg"
        backgroundColor="#f5a742"
        textColor="white"
        borderColor="transparent"
        href="/achievements"
      >
        üèÜ Achievements
      </Button>
    </div>

    <ScoreBox server:defer />

    <script>
      // TODO: Load "defualt Blue" if user is not signed in, otherwise load in user's saved theme
      const savedTheme = localStorage.getItem("selectedTheme");
      if (savedTheme) {
        document.body.style.backgroundImage = `url('/background.svg?color=${savedTheme.slice(1)}')`;
      }
    </script>
  </body>
</html>
