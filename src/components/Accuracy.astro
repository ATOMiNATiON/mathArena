---
const correctCount = parseInt(localStorage.getItem('correctCount') || '0', 10);
const incorrectCount = parseInt(localStorage.getItem('incorrectCount') || '0', 10);
const totalAnswers = correctCount + incorrectCount;
const accuracy = totalAnswers > 0 ? Math.round((correctCount / totalAnswers) * 100) : 0;
---

<div
  id="accuracy-box"
  style="position: absolute; 
        top: 10px;
        right: 10px;
        width: 20vw;
        height: 40px;
        background: rgb(57, 153, 237);
        padding: 5px;
        border: 2px rgb(8, 107, 255);
        font-size: 1.2rem;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        border-radius: 5px;
        Accuracy: <span id="accuracy-text">{accuracy}%</span>
</div>