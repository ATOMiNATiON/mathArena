---
const score = 0; // placeholder to avoid server error
---

<div
  id="score-box"
  style="position: absolute;
   top: 10px; 
   left: 10px; 
   width: 10vw; 
   height: 40px; 
   background: white; 
   padding: 5px; 
   border: 2px solid black;
   font-size: 1.2rem;
   text-align: center;
   display: flex;
   align-items: center;
   justify-content: center;
   font-weight: bold;
   border-radius: 5px;"
>
  Score: <span id="score-text">{score}</span>
</div>

<script>
  if (typeof window !== 'undefined') {
    const scoreText = document.getElementById('score-text');
    const storedScore = localStorage.getItem('userScore');
    const scoreValue = storedScore ? parseInt(storedScore, 10) : 0;

    if (scoreText) {
      scoreText.textContent = scoreValue.toString(); 
    }
  }
</script>